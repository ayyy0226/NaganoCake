<!DOCTYPE html>
<html>
<head>
  <title>Admin - NaganoCake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
    <header>
        <div class="container">
          <nav class="navbar navbar-expand-lg" style="background-color: #f6f0cc;">
            <span>
              <%= link_to root_path, class: 'font-color' do %>
              <i class="fa-solid fa-cake-candles"></i> Nagano_Cake
              <% end %>
            </span>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="#navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>
           <div class="navbar-collapse collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
               <li class="nav-item">
                 <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
               </li>

               <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path %>
               </li>

               <li class="nav-item">
                   <%= link_to "会員一覧", admin_customers_path %>
               </li>

               <li class="nav-item">
                   <%= link_to "注文履歴一覧", admin_homes_top_path %>
               </li>

               <% else %>

               <li class="nav-item">
                <%= link_to "このサイトについて", about_path, class: 'nav-link' %>
               </li>

               <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'nav-link' %>
               </li>

               <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link' %>
               </li>

               <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path, class: 'nav-link' %>
               </li>
              <% end %>
            </ul>
        </div>
    </header>
   <main>
         <%= yield %>
  </main>
</body>
<footer>
    <p class="copyright text-center pt-4 pb-4" style="background-color: #7d7d7d;">©️管理者:Nagano_Cake</p>
</footer>
</html>