<div class="container">
  <div class="row">
    <div class="col-md-10">
    <h2 class="text-left">商品一覧</h2>
    <%= link_to "新規登録", new_admin_item_path %>
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th colspan="3"></th>
        </tr>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
    </div>
  </div>
</div>