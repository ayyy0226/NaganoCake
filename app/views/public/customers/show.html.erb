<div class="container" style="background-color: #f6f0cc;">
  <h2 class="pt-4 pb-4 justify-content-center" style="background-color: #ff6c94;">マイページ</h2>
  <div class="row">
    <div class="col-md-8">
       <table class="table">
         <tbody>
           <tr>
             <th>姓</th>
             <td><%= @customer.first_name %></td>
             <th>セイ</th>
             <td><%= @customer.first_name_kana %></td>
             <th>名</th>
             <td><%= @customer.last_name %></td>
             <th>メイ</th>
             <td><%= @customer.last_name_kana %></td>
            </tr>
           <tr>
             <th>メールアドレス</th>
             <td><%= @customer.email %></td>
             <th>郵便番号</th>
             <td><%= @customer.postal_code %></td>
             <th>電話番号</th>
             <td><%= @customer.telephone_number %></td>
           </tr>
         </tbody>
       </table>
    </div>
    <div class="button">
        <%= link_to "編集", edit_customer_path(current_customer.id), class: 'btn btn-outline-primary' %>
        <%= link_to "注文履歴一覧", cart_items_path, class: 'btn btn-outline-success' %>
    </div>
  </div>
</div>