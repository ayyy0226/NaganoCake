<div class="container">
  <div class="row" style="background-color: #f6f0cc;">
    <div class="col-md-8">
      <h3 class="text-center" style="background-color: #ff6c94;">会員情報編集</h3>
      <%= form_with model: @customer do |f| %>
      <div class="form-group">
        <label for="inputName mr-4">氏名：</label>
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.text_field :last_name, autofocus: true %>
      </div>

      <div class="form-group">
        <label for="inputName mr-4">ふりがな：</label>
        <%= f.text_field :first_name_kana, autofocus: true %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label :telephone_number %>
        <%= f.text_field :telephone_number %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
      <% end %>

      <div class="form-group">
        <%= link_to "退会する", unsubscribe_customer_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>